<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="jcx" id="t_amp_view_menu-1.0.0">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="T_AMP_VIEW_MENU"/>
            </not>
        </preConditions>

        <createTable tableName="T_AMP_VIEW_MENU" remarks="顶部菜单表">
            <column name="WID" type="VARCHAR(64)" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="MENU_NAME" type="VARCHAR(64)" remarks="菜单名称"/>
            <column name="ICON_URL" type="VARCHAR(255)" remarks="图标"/>
            <column name="ORDER_NUMBER" type="NUMBER(10)" remarks="排序"/>
            <column name="AUTH_TYPE" type="NUMBER(2)" remarks="0:游客可见 1:登录后可见  2:游客及登录后可见 3:授权后可见"/>
            <column name="IS_ENABLED" type="NUMBER(2)" remarks="是否启用 0:停用 1:启用" defaultValue="0"/>
            <column name="OPEN_TYPE" type="NUMBER(2)" remarks="打开方式  0:当前页 1:新开窗口" defaultValue="1"/>
            <column name="LINK_URL" type="VARCHAR(255)" remarks="菜单链接"/>
            <column name="PARENT_ID" type="VARCHAR(64)" remarks="父级菜单ID" defaultValue="0"/>
            <column name="PROGRAMME_ID" type="VARCHAR(64)" remarks="展示方案Id"/>
            <column name="MENU_TYPE" type="NUMBER(2)" remarks="菜单类型0：无链接1：内部页面2：第三方链接"/>
            <column name="PAGE_ID" type="VARCHAR(64)" remarks="对应页面"/>
            <column name="ICON_TYPE" type="NUMBER(2)" remarks="图标类型  0 字体图标  1 png图标" defaultValue="1"/>
            <column name="MENU_NAME_LANG_KEY" type="VARCHAR(200)" remarks="菜单名称国际化id"/>
            <column name="IS_DELETED" type="NUMBER(2)" remarks="是否已经删除 0:否 1:是" defaultValue="0"/>
            <column name="UPDATE_TIME" type="TIMESTAMP" remarks="更新时间" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="CREATE_TIME" type="TIMESTAMP" remarks="创建时间" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="t_amp_view_menu-1.0.3" author="jcx">
        <modifyDataType tableName="t_amp_view_menu" columnName="ICON_URL" newDataType="VARCHAR(500)"/>
    </changeSet>

</databaseChangeLog>