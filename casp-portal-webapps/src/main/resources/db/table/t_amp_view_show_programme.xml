<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="jcx" id="t_amp_view_show_programme-1.0.0">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="T_AMP_VIEW_SHOW_PROGRAMME"/>
            </not>
        </preConditions>

        <createTable tableName="T_AMP_VIEW_SHOW_PROGRAMME" remarks="展示方案表">
            <column name="WID" type="VARCHAR(64)" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="PROGRAMME_NAME" type="VARCHAR(50)" remarks="展示方案名称"/>
            <column name="PLATFORM_TYPE" type="NUMBER(2)" remarks="适配终端0：PC1：移动端"/>
            <column name="TEMPLATE_ID" type="VARCHAR(64)" remarks="模板id"/>
            <column name="PAGE_AMOUNT" type="NUMBER(10)" remarks="页面数量"/>
            <column name="PAGE_STATUS" type="NUMBER(2)" remarks="状态0：启用1：停用" defaultValue="0"/>
            <column name="LOGO_URL" type="VARCHAR(200)" remarks="校徽/LOGO地址"/>
            <column name="TEMPLATE_CONFIG" type="CLOB" remarks="模板配置"/>
            <column name="IS_DELETED" type="NUMBER(2)" remarks="是否已经删除 0:否 1:是" defaultValue="0"/>
            <column name="UPDATE_TIME" type="TIMESTAMP" remarks="更新时间" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="CREATE_TIME" type="TIMESTAMP" remarks="创建时间" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="SIDE_FLAG" type="NUMBER(2)" remarks="是否展示左/右侧栏0都不展示 1只展示左侧栏2只展示右侧栏3、都展示" defaultValue="0"/>
            <column name="INITIALIZE_FLAG" type="NUMBER(2)" remarks="是否初始化方案（初始化展示方案隐藏）：0否  1是" defaultValue="0"/>
        </createTable>
    </changeSet>
    <changeSet id="t_amp_view_show_programme-1.0.2" author="jcx">
        <modifyDataType tableName="T_AMP_VIEW_SHOW_PROGRAMME" columnName="PROGRAMME_NAME" newDataType="VARCHAR(100)"/>
    </changeSet>
    <changeSet id="t_amp_view_show_programme-1.0.3" author="jcx">
        <addColumn tableName="T_AMP_VIEW_SHOW_PROGRAMME">
            <column name="IS_SHOW_PC_SERVICE" type="NUMBER(2)" remarks="是否显示PC端服务  1:显示  0:隐藏" defaultValue="1"></column>
        </addColumn>
    </changeSet>
