<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="jcx" id="t_amp_view_page_card_config-1.0.0">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="T_AMP_VIEW_PAGE_CARD_CONFIG"/>
            </not>
        </preConditions>

        <createTable tableName="T_AMP_VIEW_PAGE_CARD_CONFIG" remarks="页面卡片配置表">
            <column name="WID" type="VARCHAR(64)" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="CARD_WID" type="VARCHAR(64)" remarks="卡片运行时ID"/>
            <column name="PAGE_WID" type="VARCHAR(64)" remarks="页面ID"/>
            <column name="CARD_ID" type="VARCHAR(64)" remarks="卡片ID"/>
            <column name="CARD_CONFIG" type="CLOB" remarks="卡片配置"/>
            <column name="ENABLED_FLAG" type="NUMBER(2)" remarks="是否启用（0：否；1：是）" defaultValue="1"/>
            <column name="IS_DELETED" type="NUMBER(2)" remarks="是否已经删除 0:否 1:是" defaultValue="0"/>
            <column name="UPDATE_TIME" type="TIMESTAMP" remarks="更新时间" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="CREATE_TIME" type="TIMESTAMP" remarks="创建时间" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>
    <changeSet id="t_amp_view_page_card_config-1.0.1" author="jcx">
        <addColumn tableName="T_AMP_VIEW_PAGE_CARD_CONFIG">
            <column name="PLATFORM_TYPE" type="NUMBER(2)" remarks="终端类型,0为PC端(默认)，1为移动端" defaultValue="0"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>